{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "Marionette": true,
        "Backbone": true    
    },
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "indentSwitchCase": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-this-before-super": "off"
    }
}